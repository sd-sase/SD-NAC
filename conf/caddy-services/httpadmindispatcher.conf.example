{
	admin off
	log {
		output stdout
		format transform "{common_log}"
	}
	auto_https off
}

:8890 {
	route {
		logger {
			level INFO
		}

		httpdportalpreview
	}
}

:8891 {
	@doc {
		path /static/doc/*
		path /static/doc/
		path /static/doc
	}

	handle @doc {
		uri strip_prefix /static/doc
		file_server {
			index PacketFence_Installation_Guide.html
			root /usr/local/pf/docs
		}
	}

	@admin {
		path /admin/*
		path /admin/
		path /admin
	}

	handle @admin {
		uri strip_prefix /admin
		file_server {
			index index.html
			root /usr/local/pf/html/pfappserver/root/dist
		}
	}
}
